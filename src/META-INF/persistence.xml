<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="hcare" transaction-type="RESOURCE_LOCAL">
		<class>com.hcare.models.Segment</class>
		<class>com.hcare.models.Customer</class>
		<class>com.hcare.models.CustomerSegment</class>
		<class>com.hcare.models.Reward</class>
		<class>com.hcare.models.CustomerReward</class>
		<class>com.hcare.models.Product</class>
		<class>com.hcare.models.CustomerOrder</class>
		<class>com.hcare.models.Color</class>
		<class>com.hcare.models.Size</class>
		<class>com.hcare.models.Delivery</class>
		<class>com.hcare.models.DeliveryAddress</class>
		<class>com.hcare.models.CustomerAddress</class>
		<class>com.hcare.models.FutureOrder</class>
		<class>com.hcare.models.Inventory</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/hcare_db" />
			<property name="javax.persistence.jdbc.user" value="hcare_user" />
			<property name="javax.persistence.jdbc.password" value="@uToma7ically" />
			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		</properties>
	</persistence-unit>
</persistence>